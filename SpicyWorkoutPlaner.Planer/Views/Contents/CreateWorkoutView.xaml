<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SpicyWorkoutPlaner.Planer.CreateWorkoutView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:SpicyWorkoutPlaner.Planer.ViewModels.Contents"
    x:DataType="viewModels:CreateWorkoutViewViewModel">
    <Border StrokeThickness="0">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="60,60,0,0" />
        </Border.StrokeShape>
        <StackLayout BackgroundColor="White" HeightRequest="450">
            <StackLayout.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.8"
                    Radius="40"
                    Offset="0" />
            </StackLayout.Shadow>
        </StackLayout>
    </Border>
</ContentView>
